
<div class ="container h-75 text-center">
    <h3 style="font-size:40px"> Reset Password </h3>
    <%= form_tag password_forgets_path, :method => :post do %>
      <div class='form-group'>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class='actions'>
        <%= submit_tag "Reset Password" %>
      </div>
    <% end %>
</div>


