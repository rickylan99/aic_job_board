<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>


<%= form_for @user, :url => password_forget_path(params[:id]) do |f| %>
  <% if @user.errors.any? %>
    <div class='error_messages'>
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<section class="my-login-page h-75">
      <div class="container h-75">
        <div class="row h-100 justify-content-md-center align-items-center">
          <div class="col-md-5">
            <div class="card fat">
              <div class="card-body">
                <h4 class="card-title">Reset Password</h4>
                  <div class='form-group'>
                    <%= f.label :password %>
                    <%= f.password_field :password, class: "form-control", id: "password", type: "password", autocomplete: "new-password"  %>
                  </div>

                  <div class='form-group'>
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation, class: "form-control", id: "password-confirmation", type: "password", autocomplete: "new-password"%>
                  </div>

                  <div class="form-group m-0" id="login-form">
                    <%= f.submit 'Update Password', class: 'btn btn-primary btn-block' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
