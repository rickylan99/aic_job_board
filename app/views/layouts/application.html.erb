<!DOCTYPE html>
<html>
  <head>
    <title>AICJobBoard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">AIC Job Board</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
      </li>
      <% if current_user %>

        <li class="nav-item active">
          <a class="nav-link" href="<%= logout_path %>"> Log Out <span class="sr-only">(current)</span></a>
        </li>

      <% else %>
        <li class="nav-item active">
          <a class="nav-link" href="<%= login_path %>"> Log In <span class="sr-only">(current)</span></a>
        </li>

        <li class="nav-item active">
          <a class="nav-link" href="<%= new_user_path %>"> Sign Up <span class="sr-only">(current)</span></a>
        </li>
      <% end %>
    </ul>

    <% if current_user %>
    <span class="navbar-text">
      <%= "Logged in as #{current_user.email}" %>
    </span>
    <% end %>

    </div>
    </nav>


    <hr>
    <% if notice %>
      <div id = "myAlert" class="alert alert-primary alert-dismissible fade show">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert %>
      <div id = "myAlert" class="alert alert-danger alert-dismissible">
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>

  </body>
</html>
