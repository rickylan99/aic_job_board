<center>
	<div class="col-8">
			<h1>Create a New Job Posting</h1>
			<%= form_with model: @job do |form| %>
			<%= form.hidden_field :user_id, value: current_user.id %>
			<%= form.text_field :title, placeholder: "Job Title" %>
			<br/>
			<%= form.text_field :position, placeholder: "Job Position" %>
			<br/>
			<%= form.text_field :location, placeholder: "Job Location" %>
			<br/>
			<%= form.text_field :company, placeholder: "Company Name" %>
			<br/>
			<%= form.text_field :description, placeholder: "Description" %>
			<br/>
			<%= form.submit %>
			<% end %>
