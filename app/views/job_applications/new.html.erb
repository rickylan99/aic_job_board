<center>
	<div class="col-8">
		<h1>Create a New Job Application</h1>
		<h2><%= "Company: #{@job.firm.name}" %>
		<h2><%= "Description: #{@job.description}" %></h2>
		<br/>
		<%=form_with url: job_job_applications_path(@job.id), method: :post, model: @job_application do |form| %>
		<%= form.hidden_field :user_id, value: current_user.id %>
		Answers:
		<% @job.job_questions.each_with_index do |question, index| %>
			<%= form.fields_for :job_application_answers do |answers_form| %>
			<li>
				<%= answers_form.hidden_field :job_question_id, value: question.id %>
				<label for="answer_question"><%= question.question %></label>
				<%= answers_form.text_field :answer %>
			</li>
			<% end %>
      	<% end %>
		<br/>
		<%= form.submit %>
		<% end %>
	</div>
</center>