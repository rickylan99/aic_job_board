<div>
  <%= stylesheet_link_tag 'job_list', media: 'all', 'data-turbolinks-track': 'reload' %>

		<div class="col-md-1">
				<a href=<%= firms_path %> class="btn btn-outline-primary btn-block">Back</a>
		</div>

  <section class="job-listing h-75">
    <div class="container h-100">

    <div class="row justify-content-center">
      <h2> Internships for <%= @firm.name %> </h2>
    </div>

    <br/>

    <% if is_admin %>
      <center>
          <div class="col-md-3 bottom-buffer">
            <a href=<%= new_job_firm_path %> class="btn btn-primary btn-block">Add Internship</a>
          </div>
      </center>

    <% end %>

      <% @jobs.each do |job| %>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="filter-result">
            <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
              <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                  <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex"></div>
                    <div class="job-content">

                      <h5 class="text-center text-md-left"> <%= job.title %></h5>
                      <h6 class="text-center text-md-left"> <%= job.position %> </h6>
                      <h6 class="text-center text-md-left"> <%= job.location %> </h6>    
                    </div>
              </div>

              <div class="job-right my-4 flex-shrink-0">
                  <a href="<%= job_path(job) %>"  class="btn d-block w-100 d-sm-inline-block btn-light">Info</a>
                  <a href="<%= new_job_job_application_path(job)%>"  class="btn d-block w-100 d-sm-inline-block btn-light">Apply now</a>
              </div>
            </div>
          </div>   
        </div>
      </div>
      <% end %>
      </div>
    </div>
  </section>
</div>