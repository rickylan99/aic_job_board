<div>
  <center>
    <h1>Firms</h1>
    <br/>

    <div>
      <% @firms.each_with_index do |firm, index| %>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <div style="float:left">
                <h4 class="card-title"><%= firm.name %></h4>
                <h6 class="card-subtitle mb-2 text-muted">Location: <%= firm.location %></h6>
                <p class="card-text">Industry: <%= firm.industry %> </p>
              </div>
              <div style="float:right">
                <br/>
                <a href=<%= firm_path(firm) %> class="card_link">Company Overview</a>
                <br/>

                <% if current_user %>
                  <a href=<%= jobs_firm_path(firm) %> class="card_link">Internships</a>
                <% end %>

              </div>
            </div>
          </div>
        </div>
        <br/>
      <% end %>
    </div>
  </center>
</div>