<div class="container h-100">

  <div class="col-md-1">
      <a href=<%= firms_panel_path %> class="btn btn-outline-primary btn-block">Back</a>
  </div>

  <div class="row justify-content-center">
    <div class="col-8">
      <div class="card" style="padding:2rem">

        <h1 style="text-align: center">Edit Firm</h1>

        <%= form_with model: @firm do |form| %>
          <div class="form-group">
            <label for="firm_name">Name: </label>
            <%= form.text_field :name, placeholder: "Enter the name of the firm", class: "form-control"%>
          </div>
          <div class="form-group">
            <label for="firm_description">Description:</label>
            <%= form.text_area :description, placeholder: "Enter a description of the firm", class: "form-control" %>
          </div>
          
          <%= form.fields_for :logo do |ff| %>
          <div class="form-group">
            <label for="firm_logo">Firm Logo: </label>
            <%= ff.file_field :logo, multiple: false, name: "logos[]",id: "logo_upload_button", accept: ".png,.jpg,.jpeg", required: true %>
          </div>
          <% end %>
          
          <div class="form-group">
            <label for="firm_location">Location:</label>
            <%= form.text_field :location, placeholder: "Enter the location of the firm", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="firm_industry">Industry:</label>
            <%= form.text_field :industry, placeholder: "Enter the industry of the firm", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="firm_website">Website:</label>
            <%= form.text_field :website, placeholder: "Enter the firm's website url", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="firm_linkedin">LinkedIn:</label>
            <%= form.text_field :linkedin, placeholder: "Enter the firm's LinkedIn url", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="firm_contact_name">Contact Name:</label>
            <%= form.text_field :contact_name, placeholder: "Enter the contact's full name", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="firm_contact_email">Contact Email:</label>
            <%= form.text_field :contact_email, placeholder: "Enter the contact's email", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="firm_contact_linkedin">Contact LinkedIn:</label>
            <%= form.text_field :contact_linkedin, placeholder: "Enter the contact's LinkedIn url", class: "form-control" %>
          </div>
          <%= form.submit "Update Firm", class: "btn btn-aggie btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>