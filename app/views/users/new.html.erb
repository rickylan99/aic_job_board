<section class="my-signup-page h-75">
      <div class="container h-100">
        <div class="row h-100 justify-content-md-center align-items-center">
          <div class="col-md-4">
            <div class="card fat">
              <div class="card-body">
                <h4 class="card-title">Sign Up</h4>
                <%= form_for @user, :html => { multipart: true } do |f| %>

                  <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, autofocus: true, class: "form-control", autocomplete: "given-name" %>           
                  </div>

                  <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, autofocus: true, class: "form-control", autocomplete: "family-name" %>           
                  </div>

                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, autofocus: true, class: "form-control", type: "email", autocomplete: "email" %>           
                  </div>

                  <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, class: "form-control", id: "password", type: "password", autocomplete: "new-password"  %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation, class: "form-control", id: "password-confirmation", type: "password", autocomplete: "new-password"%>
                  </div>

                  <div id="error-new"></div>

                  <div class="form-group m-0" id="login-form">
                    <%= f.submit "Submit", class: "btn btn-primary btn-block", id: "submit-button" %>
                  </div>
                  
                <% end %>
              </div>
            </div>
          </div>
         
        </div>
      </div>
    </div>
</section>