<div class="col-md-1">
  <a href=<%= users_panel_path %> class="btn btn-outline-primary btn-block">Back</a>
</div>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <h1> <%= @user.first_name %> <%= @user.last_name %></h1>
  </div>
</div>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <div class="card" style= "width: 50%">
      <div class="card-body">
        <div class="row">
         <p><b> Classification: </b> <%= @user.classification %> </p>
        </div>
        <div class="row">
          <p><b> Major: </b> <%= @user.major %></p>
        </div>
        <div class="row">
          <p><b> Email: </b> <%= @user.email %></p>
        </div>
        <div class="row">
        <% @user.documents.reload %>
        <% if not @user.documents.empty? %>
            <p><b> Resume: </b> <%= link_to("#{@user.documents[0].file_name}.pdf", cl_private_download_url(@user.documents[0].public_id, :pdf), target: :_blank) %></p>
        <% else %>
           <p> No Resume </p>
        <% end %>
        </div>
        <div class ="row">
          <p> <b>Industry Prefrences:</b> <br>
          <% if @user.investment_banking%> Investment Banking<br> <%end%> 
          <% if @user.private_equity%> Private Equity  <br> <%end%>
          <% if @user.venture_capital%> Venture Capital <br> <%end%> 
          <% if @user.real_estate%> Real Estate <br> <%end%>  
        </div>
      </div>
    </div>
  </div>
</div>