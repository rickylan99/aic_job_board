<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <h1>My Profile</h1>
  </div>
</div>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <div class="card text-center" style= "width: 40%">
      <div class="card-body">
        <h4 class="card-title" style=>
          <%= @user.first_name %> <%= @user.last_name %>
        </h4>
        <div class="row">
          <div class="col">
            grade_level
          </div>
          <div class="col">
            major
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <div class="card" style= "width: 60%">
      <div class="card-body">
        <div class="row">
          <div class="col" style= "width: 30%">
            <%= form_for(@user, url: users_path) do |f| %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, autofocus: true, class: "form-control", type: "email", autocomplete: "email" %>           
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control", id: "password", type: "password", autocomplete: "new-password"  %>
              </div>
            <% end %>
          </div>
          <div class="col" style= "width: 30%">
            <%= form_for(@user, url: users_path) do |f| %>
              <div class="form-group">
                <%= f.label :classification %>
                <%= f.select(:classification, ["Freshman","Sophomore","Junior","Senior"], class: "form-control", autocomplete: "classification") %>     
              </div>

              <div class="form-group">
                <%= f.label :major %>
                <%= f.text_field :major, autofocus: true, class: "form-control", autocomplete: "major"  %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>