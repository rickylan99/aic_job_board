<div class="col-md-1">
  <a href=<%= users_panel_path %> class="btn btn-outline-primary btn-block">Back</a>
</div>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <h1> <%= @user.first_name %> <%= @user.last_name %></h1>
  </div>
</div>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <div class="card" style= "width: 50%">
      <div class="card-body">
        <div class="row">
         <b> Classification: </b> <%= @user.classification %>
        </div>
        <div class="row">
          <b> Major: </b> <%= @user.major %>
        </div>
        <div class="row">
          <b> Email: </b> <%= @user.email %>
        </div>
        <div class="row">
        <% @user.documents.reload %>
        <% if not @user.documents.empty? %>
            <b> Resume: </b> <%= link_to("#{@user.documents[0].file_name}.pdf", cl_private_download_url(@user.documents[0].public_id, :pdf), target: :_blank) %>
        <% else %>
           <p> No Resume </p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>