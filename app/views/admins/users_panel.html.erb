<%= stylesheet_link_tag 'job_list', media: 'all', 'data-turbolinks-track': 'reload' %>

<style>
th{
    padding: 5px;
    text-align: center;
}
</style>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <h1>User Information</h1>
  </div>
</div>

  <div class="col d-flex justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
           <% @access_submission.each do |access_submission| %>
              <tr>
                <td><%= access_submission.first_name %></td>
                <td><%= access_submission.last_name %></td>
                <td><%= access_submission.email %></td>
                <td><%= link_to "View Application", access_submission_path(access_submission) %></td>             
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>

  <div class="col d-flex justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td> <%= user.first_name %> </td>
                <td> <%= user.last_name %> </td>
                <td> <%= user.email %> </td>
                <td><%= link_to "View User", user_show_path(user.id) %></td>
                <td><%= link_to 'Delete', user_delete_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%></td>          
              </tr>
            <%end%>
        </table>
      </div>
    </div>
  </div>