<%= stylesheet_link_tag 'job_list', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="col-md-1">
  <a href=<%= admins_index_path %> class="btn btn-outline-primary btn-block">Back</a>
</div>

<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <h1>Pending Applications</h1>
  </div>
</div>

<div class="col d-flex justify-content-center">
  <div class="col-md-10">
    <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
         <% @access_submission.each do |access_submission| %>
            <tr>
              <td><%= access_submission.first_name %></td>
              <td><%= access_submission.last_name %></td>
              <td><%= access_submission.email %></td>
              <td><%= link_to "View Application", access_submission_path(access_submission) %></td>             
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
<div class ="container pb-5 ">
  <div class="row h-100 justify-content-md-center align-items-center">
    <h1>Current User Information</h1>
  </div>
</div>
<div class="col d-flex justify-content-center">
  <div class="col-md-10">
    <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">View User</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @user.order(role_id: :desc).order(last_name: :asc).each do |user| %>
          <tr>
            <td> <%= user.first_name %> </td>
            <td> <%= user.last_name %> </td>
            <td> <%= user.email %> </td>
            <td><%= Role.find_by(id: user.role_id).roletype %></td>
            <td><%= link_to "View User", user_show_path(user.id) %></td>  
            <% if user.role_id == Role.find_by(roletype: 'Student').id %>
              <td><%= link_to 'Promote', user_promote_path(user.id), method: :promote, data: { confirm: 'Are you sure you want to promote this user?' }, class: 'btn btn-info'%>
              <%= link_to 'Delete', user_delete_path(user.id), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger'%></td>
            <%end%>
            <% if user.role_id == Role.find_by(roletype: 'Admin').id %>
              <td><%= link_to 'Demote', user_demote_path(user.id), method: :demote, data: { confirm: 'Are you sure you want to demote this user?' }, class: 'btn btn-warning'%></td>
              
            <%end%>   
          </tr>
        <%end%>
      </table>
    </div>
  </div>
</div>

<center>
  <div class="col-md-3 bottom-buffer">
    <a href=<%= export_users_path %> class="btn btn-aggie btn-block">Export All User Resumes</a>
  </div>
  <br/>
</center>
