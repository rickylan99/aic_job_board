<h1 style="text-align:center">Admin Panel</h1>
<br/>
<br/>
<div class="col d-flex justify-content-center">
	<div class="card">
		<div class="card-body">
			<div class="row">
				<div class="col-sm-3">
          <% if AccessSubmission.all.length() > 0 %>
          <div><sup><span class="badge badge-pill count"><%=AccessSubmission.all.length()%></sup></div>
              <a href=<%= users_panel_path %> class="btn btn-outline-dark"> Users </a>
            <% else %>
					    <a href=<%= users_panel_path %> class="btn btn-outline-dark">Users</a>
          <% end %>
				</div>
				<div class="col-sm-3">
					<a href=<%= firms_panel_path %> class="btn btn-outline-dark">Firms</a>
				</div>
				<div class="col-sm-3">
					<a href=<%= jobs_panel_path %> class="btn btn-outline-dark">Jobs</a>
				</div>
				<div class="col-sm-3">
					<a href=<%= member_resources_panel_path %> class="btn btn-outline-dark">Member Resouces</a>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<br/>
</div>


<h1 class="pt-5" style="text-align:center;"> Help Pages </h1> 
<div class="row justify-content-center">
  <div class="justify-content-center ">
    <a href=<%= static_page_help_user_path %> class="btn btn-outline-dark">User Tutorial</a>
  </div>
  <div class="justify-content-center ">
    <a href=<%= static_page_help_job_path %> class="btn btn-outline-dark">Jobs Tutorial</a>
  </div>
  <div class="justify-content-center">
    <a href=<%= static_page_help_firm_path %> class="btn btn-outline-dark">Firms Tutorial</a>
  </div>
</div>

