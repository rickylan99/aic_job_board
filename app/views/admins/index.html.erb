<h1 style="text-align:center">Admin Panel</h1>
<br/>
<br/>
<div class="col d-flex justify-content-center">
	<div class="card">
		<div class="card-body">
			<div class="row">
				<div class="col-sm-4">
					<a href=<%= users_panel_path %> class="btn btn-outline-dark">Users</a>
				</div>
				<div class="col-sm-4">
					<a href=<%= firms_panel_path %> class="btn btn-outline-dark">Firms</a>
				</div>
				<div class="col-sm-4">
					<a href=<%= jobs_panel_path %> class="btn btn-outline-dark">Jobs</a>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<br/>
</div>

<div class="col d-flex justify-content-center pt-5 pb-5">
  <div class="col-md-2">
    <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Industry Preferences</th>
            <th scope="col">Count</th>
          </tr>
        </thead>
        <tbody>
        <% @prefs.each do |pref| %>
            <tr>
              <td><%= pref[0] %></td>
              <td><%= pref[1] %></td>       
            </tr>
		<% end %>
      </table>
    </div>
  </div>
</div>



<% storage = Cloudinary::Api.usage()["storage"]["usage"].to_f / 1.megabyte %>
<h4 style="text-align:center">Storage Used: <%= "#{number_with_delimiter(storage.round(2), :delimiter => ',')} MB / 10,000 MB"%> </h1>